<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    <link rel="stylesheet" href="/styles.css">
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ site.title }}">
    <link rel="alternate" href="/feed.json" type="application/json" title="{{ site.title }}">
  </head>
  <body>
    <header>
      {%- if site.mugshot -%}
        <img id="mugshot" src="{{ site.mugshot }}" width="110px"/>
      {%- endif -%}
      <h1>{{ site.title }}</h1>
      <p>{{ site.blurb }}</p>
      <nav>
        {%- for entry in search.pages("menu.visible=true", "menu.order") -%}
        <span class="nav-link">
          <a href="{{ entry.url }}">
            {{- entry.menu.title or entry.title -}}
          </a>
        </span>
        {%- endfor -%}
        {%- for name, link in site.links -%}
        <span class="nav-link">
          <a href="{{ link }}">
            {{- name -}}
          </a>
        </span>
        {%- endfor -%}
      </nav>
    </header>

    <main class="{{ bodyClass }}">
      {{ content | safe }}
    </main>

   <hr/>
   <footer>
    {%- if site.footer -%}
      <span class="footer-item">
        {{ site.footer }}
      </span>
    {%- else -%}
      <span class="footer-item">
        Site <a href="{{ site.repo }}">built</a> with <code>deno + lume + new.css</code>.
      </span>
    {%- endif -%}
      <span class="footer-item">
        <a href="/feed.rss">ðŸ“¶ RSS Feed</a>
      </span>
    </footer>
  </body>
</html>
